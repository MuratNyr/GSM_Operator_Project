<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GSM_Operator_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GSM_Operator_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container-fluid p-3 text-bg-dark bg-dark">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-controller="Musteri" asp-action="Index" class="nav-link px-2 text-white">Anasayfa</a></li>
                    <li><a asp-controller="Musteri" asp-action="Ekle" class="nav-link px-2 text-white">Ekle</a></li>
                    <li><a asp-controller="Musteri" asp-action="Detay" asp-route-id="4" class="nav-link px-2 text-white">Detay 1</a></li>
                </ul>

                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                    <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="Search">
                </form>
                @if (!string.IsNullOrEmpty(Context.Request.Cookies["UserName"]))
                {
                    <button type="submit" class="btn btn-outline-light me-2">@Context.Request.Cookies["UserName"]</button>
                    <form action="@Url.Action("Logout", "Account")" method="post">
                        <button type="submit" class="btn btn-outline-light btn-danger me-2">Çıkış Yap</button>
                    </form>
                }

                @if (string.IsNullOrEmpty(Context.Request.Cookies["UserName"]))
                {
                    <div class="text-end">
                        <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">Giriş</a>
                        <a class="btn btn-warning" asp-controller="Account" asp-action="SignUp">Kayıt Ol</a>
                    </div>
                }

            </div>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - GSM_Operator_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
